#include <iostream>
#include <vector>
using namespace std;

int main(){
    int n;
    cin>>n;
    vector<string>vec(n);
    for(int i=0;i<n;++i){
        cin>>vec[i];
    }
    for(int i=0;i<n;++i){
        string s=vec[i];
        if(s.length()>10)cout<<s.front()<<(s.length()-2)<<s.back()<<endl;
            else cout<<s<<endl;
    }
}
