#include <iostream>
using namespace std;

int main(){
    int n,T;
    cin>>T;
    while(T--){
    cin>>n;
    int arr[n];
    for(int i=0;i<n;++i)cin>>arr[i];
    int index;
        if(arr[0]==arr[1]) index=arr[0];
            else if(arr[0]==arr[2]) index =arr[0];
                else index=arr[1];
        for(int i=0;i<n;i++){
            if(arr[i]!=index){
            cout<<i+1;
            break;    
            }
    }
    cout<<endl;
  }
}
